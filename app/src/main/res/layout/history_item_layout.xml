<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <ImageView
            android:id="@+id/ivHistoryIcon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/weather_action" />

        <TextView
            android:id="@+id/tvMainHistoryTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_10"
            android:layout_toEndOf="@id/ivHistoryIcon"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tvAddressHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMainHistoryTemp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@id/ivHistoryIcon"
            android:fontFamily="@font/archivo_medium"
            android:gravity="center"
            android:textColor="@color/color_primary_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLatHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddressHistory"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toStartOf="@id/tvSunriseHistory"
            android:layout_toEndOf="@id/ivHistoryIcon"
            android:fontFamily="@font/archivo_medium"
            android:textColor="@color/color_primary_dark" />

        <TextView
            android:id="@+id/tvLonHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLatHistory"
            android:layout_margin="@dimen/dp_10"
            android:layout_toStartOf="@id/tvSunsetHistory"
            android:layout_toEndOf="@id/ivHistoryIcon"
            android:fontFamily="@font/archivo_medium"
            android:textColor="@color/color_primary_dark" />

        <TextView
            android:id="@+id/tvSunriseHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddressHistory"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:fontFamily="@font/archivo_medium"
            android:textColor="@color/color_primary_dark" />

        <TextView
            android:id="@+id/tvSunsetHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSunriseHistory"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/archivo_medium"
            android:textColor="@color/color_primary_dark" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>